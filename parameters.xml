<?xml version="1.0" encoding='UTF-8'?>
<parameters>
  <real>
    <sift_blur_std> 2.0 </sift_blur_std>
  </real>
  <integer>

  <!-- Classifier Parameters -->
    <knn_classifier_k> 1 </knn_classifier_k>

  <!-- Enabled Features: -->
    <feature_histogram> 0 </feature_histogram>
    <feature_sift> 1 </feature_sift>

  <!-- Sift variables :-->
    <sift_blur_window> 3 </sift_blur_window>
